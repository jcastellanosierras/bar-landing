---
interface Props {
  routes: { name: string; url: string }[]
  pathname: string
}

const { routes, pathname } = Astro.props
---

<nav>
  <ul class="h-full flex space-x-4 text-base font-normal items-center">
    {routes.map((route) => (
      <li>
        <a data-content-reload class={pathname === route.url ? 'active' : ''} href={route.url}>{route.name}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  a {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  a:hover {
    color: #A09754;
  }

  .active {
    color: #A09754;
    text-decoration: underline;
    text-underline-offset: 8px;
  }
</style>