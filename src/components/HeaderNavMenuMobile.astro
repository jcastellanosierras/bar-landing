---
import Menu from '@/icons/Menu.astro'
import X from '@/icons/X.astro'
import { colors } from '@/utils/colors'

const routes = [
  {
    name: 'Inicio',
    url: '/',
  },
  {
    name: 'Carta',
    url: '/carta',
  },
  {
    name: 'Reservas',
    url: '/reservas',
  },
  {
    name: 'Sobre nosotros',
    url: '/sobre-nosotros',
  },
  {
    name: 'Contacto',
    url: '/contacto',
  },
]

const pathname = Astro.url.pathname
---

<div id="menu-open" class="cursor-pointer transition-opacity hover:opacity-70">
  <Menu width={'48'} heigth={'48'} stroke={colors.primary} />
</div>
<div id="menu-container">
  <nav class="h-full">
    <div id="menu-close" class="absolute top-4 right-4 flex justify-end cursor-pointer transition-opacity hover:opacity-70">
      <X />
    </div>
    <ul class="h-full flex flex-col justify-center space-y-4 text-4xl font-medium items-center">
      {routes.map((route) => (
        <li>
          <a class={pathname === route.url ? 'active' : ''} href={route.url}>{route.name}</a>
        </li>
      ))}
    </ul>
  </nav>
</div>

<style>
  a {
    transition:
      /* transform 0.6s cubic-bezier(0.22, 1, 0.36, 1) */
      transform 0.3s,
      opacity 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  a:hover {
    display: block;
    opacity: 0.8;
    transform: scale(1.2);
  }

  .active {
    text-decoration: underline;
    text-underline-offset: 8px;
  }

  #menu-open {
    color: (var(--primary));
  }

  #menu-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 80%;
    height: 100vh;
    background-color: #a09754;

    opacity: 0;
    visibility: hidden;

    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .deployed {
    opacity: 100 !important;
    visibility: visible !important;
  }
</style>

<script>
  const menuOpen = document.getElementById('menu-open')
  const menuClose = document.getElementById('menu-close')
  const menuContainer = document.getElementById('menu-container')

  if (menuOpen && menuContainer && menuClose) {
    menuOpen.addEventListener('click', () => {
      menuContainer.classList.add('deployed')
      document.body.style.overflow = 'hidden'
    })

    menuClose.addEventListener('click', () => {
      menuContainer.classList.remove('deployed')
      document.body.style.overflow = 'auto'
    })
  }

</script>
