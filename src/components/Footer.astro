---
import Logo from '@/components/Logo.astro'
import Facebook from '@/icons/Facebook.astro'
import Instagram from '@/icons/Instagram.astro'
// import { Instagram } from 'lucide'
---

<footer
  class='w-full text-background bg-foreground'
  >
  <div class="w-[90%] mx-auto p-8 flex flex-col gap-4 text-center justify-center md:flex-row md:justify-between md:text-left xl:w-3/4">
    <div class='flex justify-center items-center'>
      <Logo />
    </div>
    <div class='flex flex-col space-y-4'>
      <div>
        <strong>Dirección</strong>
        <p>Calle del Olivo, 45</p>
        <p>28005 Madrid</p>
      </div>
  
      <div>
        <strong>Teléfono</strong>
        <p>612 34 56 78</p>
      </div>
    </div>
  
    <div class='flex flex-col space-y-4'>
      <div>
        <strong>Horario</strong>
        <p>Lunes a viernes: 12:00 - 16:00</p>
        <p>Sábado y domingo: 12:00 - 23:00</p>
      </div>
  
      <div>
        <strong>Contacto</strong>
        <p>info@licenciagourmet.com</p>
      </div>
    </div>
  
    <div>
      <strong>Redes sociales</strong>
      <div class='flex justify-center md:justify-start'>
        <div class='icon'>
          <Instagram />
        </div>
        <div class='icon'>
          <Facebook />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .icon {
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .icon:hover {
    opacity: 0.7;
  }
</style>
